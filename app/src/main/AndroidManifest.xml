<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kiddoabc">

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.KiddoABC">

        <!-- Activity principale (Home) -->
        <activity
            android:name=".ui.home.HomeActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Activity des lettres -->
        <activity
            android:name=".ui.letters.LettersActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:parentActivityName=".ui.home.HomeActivity" />

        <!-- Activity de dessin -->
        <activity
            android:name=".ui.drawing.DrawingActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:parentActivityName=".ui.letters.LettersActivity" />

    </application>

</manifest>